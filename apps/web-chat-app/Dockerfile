# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build web-react`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t web-react`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system web-react && \
          adduser --system -G web-react web-react

COPY dist/apps/web-chat-app web-react
RUN chown -R web-react:web-react .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix web-react --omit=dev -f install

CMD [ "node", "web-react" ]
