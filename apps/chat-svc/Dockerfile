# Run the container with `docker run -p 3000:3000 -t chat-svc`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=8080

WORKDIR /app

RUN addgroup --system chat-svc && \
          adduser --system -G chat-svc chat-svc

COPY dist/apps/chat-svc chat-svc
RUN chown -R chat-svc:chat-svc .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix chat-svc --omit=dev -f install

CMD [ "node", "chat-svc" ]
